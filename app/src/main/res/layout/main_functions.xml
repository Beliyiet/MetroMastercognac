<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_function_card_plans"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:elevation="16dp"
        android:layout_margin="8dp"
        android:src="@drawable/plans"
        android:stateListAnimator="@drawable/lift_on_touch">
        <TextView
            android:id="@+id/main_function_card_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="bottom"
            android:text="预案信息"
            android:textSize="20dp"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_function_card_line_site"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:elevation="16dp"
        android:layout_margin="8dp"
        android:stateListAnimator="@drawable/lift_on_touch">
        <TextView
            android:id="@+id/main_function_card_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="bottom"
            android:text="线路及站点"
            android:textSize="20dp"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_function_card_tools"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:elevation="16dp"
        android:layout_margin="8dp"
        android:stateListAnimator="@drawable/lift_on_touch">
        <TextView
            android:id="@+id/main_function_card_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="bottom"
            android:text="工具"
            android:textSize="20dp" />

    </android.support.v7.widget.CardView>

</LinearLayout>