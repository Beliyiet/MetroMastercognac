<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fmebicorp.beliyiet.metromastercognac.AboutActivity"
    tools:showIn="@layout/activity_about">
    
    <ImageView
        android:id="@+id/topphoto"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/start_greeting"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/texttop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Metro Master cognac 1.0
        \n地铁信息检索系统
        \n上海市消防总队 特勤支队 新泾中队地铁专业队"
        android:gravity="center_horizontal"
        android:layout_below="@id/topphoto"/>

    <View
        android:id="@+id/line0"
        android:layout_height="2px"
        android:layout_width="match_parent"
        android:background="#6c6c6c"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/texttop"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/about_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product for"
        android:textStyle="italic"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/line0"
        />

    <ImageView
        android:id="@+id/about_image1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@drawable/png_logo"
        android:layout_below="@id/about_text1"
        android:layout_marginBottom="25dp"
        />
    
    <TextView
        android:id="@+id/about_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Design by"
        android:textStyle="italic"
        android:gravity="center_horizontal"
        android:layout_below="@id/about_image1"

        />
    
    <ImageView
        android:id="@+id/about_image"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/create_on"
        android:layout_below="@id/about_text2"
        />

</android.widget.RelativeLayout>
